{
  "name": "Nexter",
  "version": "1.0.0",
  "description": "Nexter webpage",
  "main": "index.js",
  "scripts": {
    "watch:sass": "sass sass/main.scss css/style.css",
    "devserver": "live-server",
    "remove-map-file": "find . -type f -name '*.css.map' -delete",
    "remove-css":"trash css/style.css sass/main.css",
    "clean-start": "npm-run-all remove-map-file watch:sass remove-map-file",
    "start":"while inotifywait -r -e modify \"$(pwd)\";do npm run clean-start;done;",
    "all":"npm-run-all --parallel devserver start",  
      
    "compile:sass": "sass sass/main.scss css/style.comp.css",
    "concat:css":"concat -o css/style.concat.css css/josefinsans.300,400,400i.Nunito:300,300i.css css/style.comp.css",  
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "sass css/style.prefix.css css/style.min.css --style compressed",
    "remove:css":"rm -rf sass/main.css css/style.comp.css css/style.concat.css",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css compress:css remove:css remove-map-file"
  },
  "browser:option:liverserver":"live-server --browser=firefox",
  "author": "Jonas",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "concat": "^1.0.3",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1"
  }
}